	@echo "  CXX    $@"
	$(Q)mkdir -p $(@D)
	$(Q)$(CC) $(CFLAGS) $(LIBCXXABI_FLAGS) -c -o $@ $<
$(O)/libcxxabi.a: $(LIBCXXABI_OBJ_FILES)
	@echo "  AR     $@"
	$(Q)$(AR) rcs $@ $^

